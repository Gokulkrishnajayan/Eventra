<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Eventra - Your Event, Our Expertise</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f4f6f9;
      margin: 0;
      padding: 0;
    }

    .hero {
      background: linear-gradient(to right, rgba(0,0,0,0.6), rgba(0,0,0,0.3)), url('') no-repeat center center/cover;
      height: 100vh;
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 0 20px;
    }

    .hero h1 {
      font-size: 3.5rem;
      font-weight: 900;
      margin-bottom: 1rem;
      text-shadow: 1px 1px 4px rgba(0,0,0,0.5);
    }

    .hero p {
      font-size: 1.4rem;
      max-width: 600px;
      margin-bottom: 2rem;
      text-shadow: 1px 1px 4px rgba(0,0,0,0.5);
    }

    .hero .btn {
      padding: 12px 28px;
      font-size: 1rem;
      border-radius: 50px;
      margin: 0 10px;
      transition: all 0.3s ease-in-out;
    }

    .hero .btn-outline-light:hover {
      background-color: #fff;
      color: #000;
    }

    .features {
      padding: 80px 0;
      background-color: #fff;
    }

    .features h2 {
      font-weight: 800;
      font-size: 2.5rem;
      margin-bottom: 50px;
      color: #333;
    }

    .feature-icon {
      font-size: 3rem;
      color: #0d6efd;
      margin-bottom: 20px;
    }

    .feature-box {
      padding: 30px;
      border-radius: 12px;
      background-color: #f9f9f9;
      box-shadow: 0 4px 20px rgba(0,0,0,0.05);
      transition: transform 0.3s ease;
    }

    .feature-box:hover {
      transform: translateY(-5px);
    }

    footer {
      background-color: #212529;
      color: #adb5bd;
      padding: 30px 0;
      font-size: 0.95rem;
    }

    footer p {
      margin: 0;
    }

    @media (max-width: 576px) {
      .hero h1 {
        font-size: 2.2rem;
      }
      .hero p {
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>

  <!-- Hero Section -->
  <div class="hero" id="hero">
    <h1>Welcome to Eventra</h1>
    <p>Your trusted partner for organizing stunning, stress-free events that leave lasting impressions.</p>
    <div>
      <a href="/signup" class="btn btn-primary">Get Started</a>
      <a href="/login" class="btn btn-outline-light">Login</a>
    </div>
  </div>

  <!-- Features Section -->
  <section class="features text-center container">
    <h2>Why Choose Eventra?</h2>
    <div class="row g-4">
      <div class="col-md-4">
        <div class="feature-box">
          <div class="feature-icon"><i class="fas fa-calendar-check"></i></div>
          <h5>Smart Scheduling</h5>
          <p>Manage all your bookings with real-time availability and instant confirmations.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-box">
          <div class="feature-icon"><i class="fas fa-handshake"></i></div>
          <h5>Verified Vendors</h5>
          <p>Choose from a curated network of reliable professionals in every event category.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-box">
          <div class="feature-icon"><i class="fas fa-chart-line"></i></div>
          <h5>Real Results</h5>
          <p>Track feedback, analyze reviews, and plan better using live analytics and ratings.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="text-center">
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> Eventra. All rights reserved.</p>
    </div>
  </footer>

  <!-- FontAwesome Icons -->
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

  <!-- Random Hero Image Script -->
  <script>
  // Use random images from the web for hero background
  const onlineImages = [
    'https://images.unsplash.com/photo-1521305916504-4a1121188589',
    'https://images.unsplash.com/photo-1492684223066-81342ee5ff30',
    'https://images.unsplash.com/photo-1531058020387-3be344556be6',
  ];

  const randomImage = onlineImages[Math.floor(Math.random() * onlineImages.length)];
  document.getElementById('hero').style.backgroundImage =
    `linear-gradient(to right, rgba(0,0,0,0.6), rgba(0,0,0,0.3)), url('${randomImage}')`;
</script>

</body>
</html>
