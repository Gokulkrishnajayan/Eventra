  <!-- Add Promotion Modal -->
  <div class="modal fade" id="addPromotionModal" tabindex="-1" aria-labelledby="addPromotionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title fw-bold" id="addPromotionModalLabel">Create New Promotion</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form>
            <div class="mb-3">
              <label class="form-label">Promotion Name</label>
              <input type="text" class="form-control" placeholder="e.g., Summer Special">
            </div>
            
            <div class="mb-3">
              <label class="form-label">Service</label>
              <select class="form-select">
                <option value="">All Services</option>
                <option value="1">Wedding Photography</option>
                <option value="2">Stage Decoration</option>
                <option value="3">Wedding Cake</option>
                <option value="4">DJ Service</option>
              </select>
            </div>
            
            <div class="mb-3">
              <label class="form-label">Discount Type</label>
              <select class="form-select">
                <option value="percentage">Percentage</option>
                <option value="fixed">Fixed Amount</option>
              </select>
            </div>
            
            <div class="mb-3">
              <label class="form-label">Discount Value</label>
              <div class="input-group">
                <input type="number" class="form-control" placeholder="10">
                <span class="input-group-text">%</span>
              </div>
            </div>
            
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">Start Date</label>
                <input type="date" class="form-control">
              </div>
              
              <div class="col-md-6">
                <label class="form-label">End Date</label>
                <input type="date" class="form-control">
              </div>
            </div>
            
            <div class="mb-3 mt-3">
              <label class="form-label">Promotion Description</label>
              <textarea class="form-control" rows="2" placeholder="Describe your promotion..."></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create Promotion</button>
        </div>
      </div>
    </div>
