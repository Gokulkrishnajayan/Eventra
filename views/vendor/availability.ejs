
  <!-- Main Content -->
  <div class="main-content">
    <!-- Availability Section -->
    <section id="availability" class="section-content">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h5 class="fw-bold mb-0">Manage Availability</h5>
        <button class="btn btn-primary d-flex align-items-center gap-2" data-bs-toggle="modal" data-bs-target="#addAvailabilityModal">
          <i data-lucide="plus" class="lucide"></i> Add Blockout
        </button>
      </div>
      
      <div class="card p-4">
        <div id="calendar"></div>
      </div>
      
      <div class="card mt-4 p-4">
        <h5 class="fw-bold mb-3">Current Availability Blocks</h5>
        
        <div class="table-responsive">
          <table class="table table-enhanced">
            <thead>
              <tr>
                <th>Service</th>
                <th>Date Range</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Wedding Photography</td>
                <td>Aug 1-30, 2025</td>
                <td><span class="badge bg-success bg-opacity-10 text-success">Available</span></td>
                <td>
                  <button class="btn btn-sm btn-outline-danger">
                    <i data-lucide="trash-2" class="lucide"></i>
                  </button>
                </td>
              </tr>
              <tr>
                <td>Grand Ballroom</td>
                <td>Aug 15-Sep 10, 2025</td>
                <td><span class="badge bg-success bg-opacity-10 text-success">Available</span></td>
                <td>
                  <button class="btn btn-sm btn-outline-danger">
                    <i data-lucide="trash-2" class="lucide"></i>
                  </button>
                </td>
              </tr>
              <tr>
                <td>All Services</td>
                <td>Sep 5-7, 2025</td>
                <td><span class="badge bg-danger bg-opacity-10 text-danger">Unavailable</span></td>
                <td>
                  <button class="btn btn-sm btn-outline-danger">
                    <i data-lucide="trash-2" class="lucide"></i>
                  </button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </div>

  <!-- Add Availability Modal -->
  <div class="modal fade" id="addAvailabilityModal" tabindex="-1" aria-labelledby="addAvailabilityModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title fw-bold" id="addAvailabilityModalLabel">Add Availability Block</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form>
            <div class="mb-3">
              <label class="form-label">Service</label>
              <select class="form-select">
                <option value="">All Services</option>
                <option value="1">Wedding Photography</option>
                <option value="2">Stage Decoration</option>
                <option value="3">Wedding Cake</option>
                <option value="4">DJ Service</option>
              </select>
            </div>
            
            <div class="mb-3">
              <label class="form-label">Block Type</label>
              <select class="form-select">
                <option value="available">Available</option>
                <option value="unavailable">Unavailable</option>
              </select>
            </div>
            
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">Start Date</label>
                <input type="date" class="form-control">
              </div>
              
              <div class="col-md-6">
                <label class="form-label">End Date</label>
                <input type="date" class="form-control">
              </div>
            </div>
            
            <div class="mb-3 mt-3">
              <label class="form-label">Notes (Optional)</label>
              <textarea class="form-control" rows="2"></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save Block</button>
        </div>
      </div>
    </div>
  </div>


  <!-- Scripts -->
