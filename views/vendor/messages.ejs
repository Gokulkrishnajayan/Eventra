
  <!-- Main Content -->
  <div class="main-content">
    <!-- Messages Section -->
    <section id="messages" class="section-content">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h5 class="fw-bold mb-0">Customer Messages</h5>
        <div class="input-group" style="width: 250px;">
          <input type="text" class="form-control" placeholder="Search messages..." id="messageSearch">
          <button class="btn btn-outline-secondary" type="button" id="searchButton">
            <i data-lucide="search" class="lucide"></i>
          </button>
        </div>
      </div>
      
      <div class="card p-4">
        <div class="row">
          <div class="col-md-4">
            <div class="list-group list-group-flush pe-3" style="max-height: 600px; overflow-y: auto;" id="conversationList">
              <!-- Conversations will be loaded here by JavaScript -->
            </div>
          </div>
          
          <div class="col-md-8">
            <div class="card h-100" id="chatContainer">
              <div class="card-header d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center" id="chatHeader">
                  <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                    <i data-lucide="user" class="lucide text-white" style="width: 18px; height: 18px;"></i>
                  </div>
                  <div>
                    <h6 class="mb-0">Select a conversation</h6>
                    <small class="text-muted"></small>
                  </div>
                </div>
                <div id="chatActions">
                  <button class="btn btn-sm btn-outline-secondary me-2" data-bs-toggle="modal" data-bs-target="#customerProfileModal" disabled>
                    <i data-lucide="user" class="lucide me-1"></i> Profile
                  </button>
                  <button class="btn btn-sm btn-outline-secondary" disabled>
                    <i data-lucide="phone" class="lucide me-1"></i> Call
                  </button>
                </div>
              </div>
              
              <div class="card-body p-0">
                <div class="chat-container" id="messageArea">
                  <div class="text-center py-5 text-muted">
                    <i data-lucide="message-square" class="lucide mb-2" style="width: 48px; height: 48px;"></i>
                    <h5>Select a conversation to start messaging</h5>
                  </div>
                </div>
                
                <div class="card-footer bg-white" id="messageInputContainer" style="display: none;">
                  <div class="input-group">
                    <input type="text" class="form-control" placeholder="Type your message..." id="messageInput">
                    <button class="btn btn-primary" type="button" id="sendMessageBtn">
                      <i data-lucide="send" class="lucide"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <!-- Customer Profile Modal -->
  <div class="modal fade" id="customerProfileModal" tabindex="-1" aria-labelledby="customerProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title fw-bold" id="customerProfileModalLabel">Customer Profile</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center" id="customerProfileContent">
          <!-- Profile content will be loaded here by JavaScript -->
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="profileMessageBtn">
            <i data-lucide="message-square" class="lucide me-1"></i> Send Message
          </button>
        </div>
      </div>
    </div>
  </div>

